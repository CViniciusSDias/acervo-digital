{% extends "::base.html.twig" %}

{% block stylesheets %}
    {{ parent() }}

    <style>
        dd {
            margin-bottom: 1em;
        }
    </style>
{% endblock %}

{% block body %}
    <dl>
        <dt>Titulo:</dt>
        <dd>{{ trabalho.titulo }}</dd>

        <dt>Ano:</dt>
        <dd>{{ trabalho.anoPublicacao }}</dd>

        <dt>Autor:</dt>
        <dd>{{ trabalho.autor.nome }}</dd>

        <dt>Orientador:</dt>
        <dd>{{ trabalho.orientador.nome }}</dd>

        <dt>Resumo:</dt>
        <dd>{{ trabalho.resumo }}</dd>

        <dt>Linhas de pesquisa:</dt>
        <dd>
            <ul>
            {% for linha in trabalho.linhasPesquisa %}
                <li>{{ linha.descricao }}</li>
            {% endfor %}
            </ul>
        </dd>

        <dt>Palavras-chave:</dt>
        <dd>
            {% for tag in trabalho.tags %}
                <h4><span class="label label-primary">{{ tag.nome }}</span></h4>
            {% endfor %}
        </dd>
    </dl>
{% endblock %}
